# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_win64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_win64)
  ApplicationTools_config = debug_win64
  ApplicationTools_Tests_config = debug_win64
endif
ifeq ($(config),debug_linux)
  ApplicationTools_config = debug_linux
  ApplicationTools_Tests_config = debug_linux
endif
ifeq ($(config),release_win64)
  ApplicationTools_config = release_win64
  ApplicationTools_Tests_config = release_win64
endif
ifeq ($(config),release_linux)
  ApplicationTools_config = release_linux
  ApplicationTools_Tests_config = release_linux
endif

PROJECTS := ApplicationTools ApplicationTools_Tests

.PHONY: all clean help $(PROJECTS) libs

all: $(PROJECTS)

libs: ApplicationTools

ApplicationTools:
ifneq (,$(ApplicationTools_config))
	@echo "==== Building ApplicationTools ($(ApplicationTools_config)) ===="
	@${MAKE} --no-print-directory -C . -f ApplicationTools.make config=$(ApplicationTools_config)
endif

ApplicationTools_Tests: ApplicationTools
ifneq (,$(ApplicationTools_Tests_config))
	@echo "==== Building ApplicationTools_Tests ($(ApplicationTools_Tests_config)) ===="
	@${MAKE} --no-print-directory -C . -f ApplicationTools_Tests.make config=$(ApplicationTools_Tests_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f ApplicationTools.make clean
	@${MAKE} --no-print-directory -C . -f ApplicationTools_Tests.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_win64"
	@echo "  debug_linux"
	@echo "  release_win64"
	@echo "  release_linux"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ApplicationTools"
	@echo "   ApplicationTools_Tests"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"